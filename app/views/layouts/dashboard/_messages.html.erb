<script>
  <% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
      <% if name.to_s == 'notice' %>
        iziToast.success({
          title: 'Info',
          message: '<%= msg.html_safe %>',
          position: 'bottomRight'
        });
      <% elsif %>
        iziToast.error({
          title: 'Erro',
          message: '<%= msg.html_safe %>',
          position: 'bottomRight'
        });
      <% end %>
    <% end %>
  <% end %>
</script>