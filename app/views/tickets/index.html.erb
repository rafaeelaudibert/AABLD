<p id="notice"><%= notice %></p>

<% content_for :title do %>
  Passagens
<% end %>

<table>
  <thead>
    <tr>
      <th>Source city</th>
      <th>Destination city</th>
      <th>Value</th>
      <th>Bus company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.source_city.name %></td>
        <td><%= ticket.destination_city.name %></td>
        <td><%= format_currency ticket.value %></td>
        <td><%= ticket.bus_company.name %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%== paginate(@pagy) %>

