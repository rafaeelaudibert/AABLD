<div id="app">
  <section class="section">
    <div class="container mt-5">
      <div class="row">
        <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
          <div class="login-brand">
            <img src="/assets/img/logo.png" alt="logo" height="100">
          </div>

          <div class="card card-primary">
            <div class="card-header"><h4>Altere sua senha</h4></div>

            <div class="card-body">
              <p class="text-muted">Parece que você esqueceu sua senha! Insira a sua nova senha abaixo!</p>
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <%= f.hidden_field :reset_password_token %>

                <div class="form-group">
                  <%= f.label :password %><br />
                  <% if @minimum_password_length %>
                    <small class="form-text text-muted"> <%= @minimum_password_length%> caracteres no mínimo </small>
                  <% end %>
                  <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control', tabindex: 1, required: true %>
                </div>

                <div class="form-group">
                  <%= f.label :password_confirmation %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', tabindex: 2, required: true %>
                </div>

                <div class="form-group">
                  <%= f.submit "Alterar minha senha", class: 'btn btn-primary btn-lg btn-block' %>
                </div>
              <% end %>
              <div class="float-right">
                <%= render "devise/shared/links" %>
              </div>          
            </div>
          </div>
          <div class="simple-footer">
            Copyright &copy; AABLD <%= Time.current.year %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
