<div id="app">
    <section class="section">
      <div class="container mt-5">
        <div class="row">
          <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
            <div class="login-brand">
              <img src="/assets/img/logo.png" alt="logo" height="100">
            </div>

            <div class="card card-primary">
              <div class="card-header"><h4>Login</h4></div>

              <div class="card-body">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'needs-validation', novalidate: '') do |f| %>
                <div class="form-group">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, class: 'form-control', required: true, tabindex: 1 %>
                  <div class="invalid-feedback">
                    Por favor, preencha seu e-mail
                  </div>
                </div>

                <div class="form-group">
                  <div class="d-block">
                    <%= f.label :password, class: 'control-label' %>
                    <div class="float-right">
                      <%= render "users/shared/links" %>
                    </div>
                  </div>                  
                  <%= f.password_field :password, class: 'form-control', required: true, tabindex: 2 %>
                  <div class="invalid-feedback">
                    Por favor, preencha sua senha corretamente
                  </div>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="form-group">
                    <div class="custom-control custom-checkbox">
                      <%= f.check_box :remember_me, class: 'custom-control-input', tabindex: 3 %>
                      <%= f.label :remember_me, 'Lembrar-se', class: 'custom-control-label' %>
                    </div>
                  </div>
                <% end %>

                <div class="actions">
                  <%= f.submit "Entrar", class: 'btn btn-primary btn-lg btn-block', tabindex: 4 %>
                </div>
              <% end %> 
            </div>
            <div class="simple-footer">
              Copyright &copy; AABLD 2019
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
