<div id="app">
  <section class="section">
    <div class="container mt-5">
      <div class="row">
        <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
          <div class="login-brand">
            <img src="/assets/img/logo.png" alt="logo" height="100">
          </div>

          <div class="card card-primary">
            <div class="card-header"><h4>Esqueceu sua senha?</h4></div>

            <div class="card-body">
              <p class="text-muted">Lhe enviaremos um link para poder resetar a sua senha</p>
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <%= render "users/shared/error_messages", resource: resource %>

                <div class="form-group">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, class: 'form-control', tabindex: 1, required: true %>
                </div>

                <div class="form-group">
                  <%= f.submit "Enviar instruções", class: 'btn btn-primary btn-lg btn-block' %>
                </div>
              <% end %>
              <div class="float-right">
                <%= render "users/shared/links" %>
              </div>          
            </div>
          </div>
          <div class="simple-footer">
            Copyright &copy; AABLD <%= Time.current.year %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>


